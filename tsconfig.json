{
  "compilerOptions": {
      "module": "commonjs",
      "alwaysStrict": true,
      "noImplicitAny": false,
      "noEmitOnError": false,
      "removeComments": true,
      "sourceMap": false,
      "target": "es2017",
      "outDir": "./out",
      "rootDir": "./src",
      "allowJs": true,
      "experimentalDecorators": true
  },
  "include": [
      "./src"
  ],
  "compileOnSave": true
}
